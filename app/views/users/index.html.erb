<div class="container">
  <h1 class="text-center my-4">List of Users :-</h1>
  <% @users.each do |user| %>
  <div class="row">
    <div class="col-md-8 mx-auto mb-4 card">
      <div class="card-body">
        <ul class="card-text">
          <li>Name: <%= link_to user.name, user_path(user) %></li>
          <li>Email: <%= link_to user.email, user_path(user) %></li>
        </ul>
        <%= link_to "Edit User", edit_user_path(user), class: "btn btn-primary my-2 col-md-2" %>
        <%= link_to "Delete user", user_path(user), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-primary my-2 col-md-2" %>
      </div>
    </div>
  </div>
  <% end %>
</div>