<%= render 'shared/errors', obj: @user %>

<%= form_for @user do |f| %>
<div class="form-group">
  <%= f.label :name %><br />
  <%= f.text_field :name, class: "form-control", placeholder: "Enter Name", autofocus: true %>
</div>
<div class="form-group">
  <%= f.label :email %><br />
  <%= f.email_field :email, class: "form-control", placeholder: "Enter Email" %>
</div>
<% if @user.new_record? %>
<div class="form-group">
  <%= f.label :password %><br />
  <%= f.password_field :password, class: "form-control", placeholder: "Enter Password" %>
</div>
<div class="form-group">
  <%= f.label :role %>
  <%= f.collection_select(:role, User::ROLES, :to_s, lambda{|i| i.to_s.humanize}, {}, {:class=>"form-control"}) %>
</div>
<% end %>
<%= f.submit(@user.new_record? ? "Sign Up" : "Update Your Account", class: "btn btn-primary")  %>
<% end %>