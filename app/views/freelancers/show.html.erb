<div class="container">
  <h1 class="text-center my-4">Your's Details :</h1>
  <div class="row">
    <div class="px-4 mx-auto col-md-3 card">
      <%=image_tag @freelancer.avatar.cover.url, class: "card-img-top mt-3", id: "user_cover_image" %>
      <div class="card-body"></div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Industry : <%= @freelancer.industry%> </li>
        <li class="list-group-item">Experience: <%= @freelancer.experience%> </li>
        <li class="list-group-item">Qualification: <%= @freelancer.qualification%></li>
      </ul>
      <div class="card-body">
        <%= link_to "Edit Details", edit_freelancer_path(@freelancer), class: "btn btn-primary my-2" %>
      </div>
    </div>
  </div>
</div>